pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  serviceAccountName: jenkins
  containers:
  - name: node
    image: node:22-alpine
    command: ['cat']
    tty: true
    volumeMounts:
    - name: npm-cache
      mountPath: /root/.npm
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command: ['cat']
    tty: true
    volumeMounts:
    - name: kaniko-cache
      mountPath: /cache
  - name: tooling
      image: alpine:3.20
      command: ["sh", "-c", "sleep 3600"]
      tty: true
  volumes:
  - name: npm-cache
    emptyDir: {}
  - name: kaniko-cache
    emptyDir: {}
"""
    }
  }

  environment {
    APP_NAME   = "tahirefendii/tahir-basic-nodejs-project"
    IMAGE_TAG  = "${env.BUILD_NUMBER}"
    IMAGE      = "docker.io/${APP_NAME}:${IMAGE_TAG}"
    REPOSITORY = "docker.io/${APP_NAME}"
    ARGOCD_APP = "my-nodejs-app"
    ARGOCD_SRV = "argocd-server.argocd.svc.cluster.local:443"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install') {
      steps {
        container('node') {
          sh 'echo "Hello, i am creating a container"'
          sh 'node -v && npm -v'
          sh 'npm ci || npm install'
        }
      }
    }

    stage('Build app') {
      when {
        expression { fileExists('package.json') }
      }
      steps {
        container('node') {
          sh 'npm run build || echo "no build step"'
        }
      }
    }

    stage('Build & Push (kaniko)') {
      steps {
        container('kaniko') {
          withCredentials([usernamePassword(
            credentialsId: 'docker-registry',
            usernameVariable: 'DOCKER_USER',
            passwordVariable: 'DOCKER_PWD'
          )]) {
            writeFile file: 'docker-config.json', text: """{
  "auths": {
    "https://index.docker.io/v1/": {
      "username": "${DOCKER_USER}",
      "password": "${DOCKER_PWD}"
    }
  }
}"""
            sh '''
              set -eux

              mkdir -p /kaniko/.docker
              cp docker-config.json /kaniko/.docker/config.json

              /kaniko/executor \
                --context "$(pwd)" \
                --dockerfile Dockerfile \
                --destination "$IMAGE" \
                --cache=true \
                --cache-dir=/cache
            '''
          }
        }
      }
    }

    stage('Setup tools') {
      steps {
        container('tooling') {
          sh '''
            set -eux
            # kubectl ve argocd CLI yükle (örnek)
            apk add --no-cache curl bash
            curl -sSL -o /usr/local/bin/argocd https://github.com/argoproj/argo-cd/releases/download/v2.13.0/argocd-linux-amd64
            chmod +x /usr/local/bin/argocd
          '''
        }
      }
    }

    stage('ArgoCD Test') {
      steps {
        container('tooling') {
          sh '''
            set -eux
            argocd version || echo "argocd cli çalışıyor"

            argocd login argocd-server.argocd.svc.cluster.local:443 --username admin --password X-CpuarkenIV75Qf --insecure
          '''
        }
      }
    }

    stage('ArgoCD Deployment') {
      steps {
        container('tooling') {
          sh '''
            set -eux
            argocd app sync "" \
                  --parameter image.repository="$REPOSITORY" \
                  --parameter image.tag="$IMAGE_TAG" \
                  --grpc-web \
                  --timeout 120
          '''
        }
      }
    }
  }

  post {
    success {
      echo "Image pushed: ${IMAGE}"
    }
    failure {
      echo "Pipeline failed"
    }
  }
}
